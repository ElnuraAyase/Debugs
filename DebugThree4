public class DebugThree4
// This program calculates tuition bills as credits times rate per credit hour
{
   public static void main(String[] args)
   {
      int myCredits = 13;
      int yourCredits = 17;
      double rate = 75.84;
      System.out.println("My tuition:");
      tuitionBill(myCredits, rate);
      System.out.println("Your tuition:");
      tuitionBill(yourCredits, rate);
   }
   public static void tuitionBill(int credit, double rate)
   {
      double total = credit * rate;
      System.out.println("Total due " + total);
   }
}
